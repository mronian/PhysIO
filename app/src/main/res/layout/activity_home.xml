<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HomeActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/server_ip"
        android:editable="true"
        android:enabled="true"
        android:inputType="text"
        android:linksClickable="false"
        android:minWidth="180dp"
        android:text="10.132.90.180"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/server_ip_label"
        android:layout_toEndOf="@+id/server_ip_label"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Server IP:"
        android:id="@+id/server_ip_label"
        android:layout_alignBottom="@+id/server_ip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Port:"
        android:id="@+id/server_port_label"
        android:layout_alignBottom="@+id/server_port"
        android:layout_toLeftOf="@+id/server_ip"
        android:layout_toStartOf="@+id/server_ip" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:id="@+id/server_port"
        android:numeric="integer"
        android:editable="true"
        android:text="8000"
        android:inputType="number"
        android:layout_below="@+id/server_ip"
        android:layout_alignLeft="@+id/server_ip"
        android:layout_alignStart="@+id/server_ip" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Data"
        android:id="@+id/send_btn"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/server_port"
        android:layout_alignLeft="@+id/server_port"
        android:layout_alignStart="@+id/server_port" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Data"
        android:id="@+id/data_text"
        android:layout_below="@+id/send_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="39dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
